{
  "$schema": "https://wails.io/schemas/config.v2.json",
  "name": "dbmx",
  "outputfilename": "dbmx",
  "frontend:install": "pnpm install",
  "frontend:build": "pnpm run build",
  "frontend:dev:watcher": "pnpm run dev",
  "frontend:dev:serverUrl": "auto",
  "author": {
    "name": "Karan Singhasane",
    "email": "ksinghasane14@gmail.com"
  },
  "wailsjsdir": "./frontend/src/lib",
  "preBuildHooks": {
    "darwin/*": "bash -lc 'cd ../../ && bash ./scripts/build_db.sh'",
    "linux/*": "bash -lc 'cd ../../ && bash ./scripts/build_db.sh'",
    "windows/*": "pwsh -NoProfile -ExecutionPolicy Bypass -Command \"Set-Location ..\\..; ./scripts/build_db.ps1\""
  },
  "info": {
    "companyName": "dbmx",
    "productName": "dbmx",
    "productVersion": "0.0.1",
    "copyright": "Copyright (c) 2026 dbmx",
    "comments": "dbmx",
    "fileAssociations": [
      {
        "ext": "dbmx",
        "name": "dbmx",
        "description": "dbmx file",
        "iconName": "appicon",
        "role": "Editor"
      }
    ],
    "protocols": [
      {
        "scheme": "dbmx",
        "description": "dbmx protocol",
        "role": "Editor"
      }
    ]
  },
  "tags": "production"
}